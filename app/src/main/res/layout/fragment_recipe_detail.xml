<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Photo du plat -->
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_recipe"
            android:tintMode="src_in"
            android:tint="@color/cr_primary_container"
            android:background="@color/cr_surface_variant"
            android:contentDescription="Photo recette"/>

        <!-- Titre + métadonnées + action -->
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <TextView android:id="@+id/txtTitle" android:textStyle="bold" android:textSize="22sp"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/txtTimeServings"
                android:textColor="#666"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipsMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:singleLine="true"
                app:singleSelection="false"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartRecipe"
                style="@style/Widget.CooknRest.TouchButton"
                android:text="@string/btn_start_recipe"
                app:icon="@drawable/ic_book"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView android:text="@string/section_ingredients" android:textStyle="bold"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/txtIngredients"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMissingToShopping"
                style="@style/Widget.CooknRest.TouchButton.Tonal"
                android:text="@string/btn_add_missing"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <TextView android:text="@string/section_steps" android:textStyle="bold"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="8dp"/>

            <LinearLayout
                android:id="@+id/stepsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
