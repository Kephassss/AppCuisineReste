<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles pour les composants (Widgets) -->

    <!-- Style pour les "chips" d'ingrÃ©dients -->
    <style name="Widget.CooknRest.Chip.Ingredient" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/cr_primary_container</item>
        <item name="android:textColor">@color/cr_on_primary_container</item>
        <item name="closeIconTint">@color/cr_primary</item>
        <item name="rippleColor">@color/cr_primary_container</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <!-- Style pour l'indicateur actif de la barre de navigation -->
    <style name="Widget.CooknRest.Nav.ActiveIndicator">
        <item name="android:color">@color/cr_primary_container</item>
        <item name="android:width">48dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CooknRest.Rounded.Small</item>
    </style>

    <!-- Styles pour les boutons "Touch-friendly" -->
    <style name="Widget.CooknRest.TouchButton" parent="Widget.Material3.Button">
        <item name="rippleColor">@color/cr_primary_container</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="Widget.CooknRest.TouchButton.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="rippleColor">@color/cr_primary_container</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="Widget.CooknRest.TouchButton.Elevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="rippleColor">@color/cr_primary_container</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

</resources>
